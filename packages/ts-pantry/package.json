{
  "name": "ts-pantry",
  "version": "0.7.5",
  "description": "TypeScript types for Pantry package manager configuration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build.ts",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun build src/index.ts --outdir dist --target node --format esm --watch",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "pantry",
    "package-manager",
    "configuration",
    "types",
    "typescript"
  ],
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacksjs/pantry.git",
    "directory": "packages/ts-pantry"
  },
  "devDependencies": {
    "better-dx": "^0.2.2",
    "ts-pkgx": "^0.4.120",
    "typescript": "^5.9.3"
  }
}
