{
  "name": "pantry",
  "type": "module",
  "version": "0.7.5",
  "private": true,
  "description": "A performant, universal package manager. Like Homebrew, but faster.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/pantry#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/pantry.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/pantry/issues"
  },
  "keywords": [
    "homebrew",
    "pkgx",
    "bun",
    "package"
  ],
  "scripts": {
    "build": "for dir in packages/*; do if [ -f \"$dir/package.json\" ]; then echo \"Building $dir\" && bun run --cwd $dir build; fi; done",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "test": "bun test",
    "lint": "echo \"Pickier to be implemented\"",
    "lint:fix": "echo \"Pickier to be implemented\"",
    "changelog": "bunx --bun logsmith --verbose",
    "changelog:generate": "bunx --bun logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx --bun bumpx prompt --recursive",
    "dev:docs": "bun vitepress dev docs",
    "build:docs": "bun vitepress build docs",
    "preview:docs": "bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "better-dx": "^0.2.3"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{zig}": "bash -c '[[ $0 != *generated.zig ]] && zig fmt --check $0 || true'",
        "*.{js,ts,json,yaml,yml,md}": "echo \"Pickier to be implemented\""
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  },
  "workspaces": [
    "packages/*"
  ]
}
